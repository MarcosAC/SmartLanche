<Application x:Class="SmartLanche.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SmartLanche.Converters"
             xmlns:vms="clr-namespace:SmartLanche.ViewModels"
             xmlns:views="clr-namespace:SmartLanche.Views"
             xmlns:local="clr-namespace:SmartLanche"
             Startup="Application_Startup">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DataGridStyles.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/CardStyles.xaml" />                
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />

            <Style x:Key="NumericDataGridColumnStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Margin" Value="0,0,5,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <DataTemplate DataType="{x:Type vms:SalesViewModel}">
                <views:SalesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:ProductRegistrationViewModel}">
                <views:ProductRegistrationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:ClientRegistrationViewModel}">
                <views:ClientRegistrationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:OrderStatusViewModel}">
                <views:OrderStatusView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:PendingPaymentsViewModel}">
                <views:PendingPaymentsView />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vms:InventoryViewModel}">
                <views:InventoryView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    