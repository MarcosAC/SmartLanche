<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseDataGridTextStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="8,4" />        
    </Style>

    <Style x:Key="TextColumnStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource BaseDataGridTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Left" />        
    </Style>

    <Style x:Key="MonetaryColumnStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource BaseDataGridTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="CenterColumnStyle"
       TargetType="TextBlock"
       BasedOn="{StaticResource BaseDataGridTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center" />        
    </Style>

    <Style x:Key="ProductRowInventoryStyle"
           TargetType="DataGridRow"
           BasedOn="{StaticResource {x:Type DataGridRow}}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                <Setter Property="Foreground" Value="#E53935" />
                <Setter Property="FontWeight" Value="Bold" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False" />   
    </Style>
</ResourceDictionary>