<UserControl x:Class="SmartLanche.Views.ProductRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartLanche.Views"              
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="0"
            Margin="0,0,0,16"> 
            
            <StackPanel Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock 
                    Text="Cadastro de Produtos"
                    FontSize="24"
                    FontWeight="Bold"
                    Margin="0,0,0,10" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Nome:"
                        VerticalAlignment="Center"
                        Margin="0,5,10,5" />
                    
                    <TextBox 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,5"
                        IsEnabled="{Binding IsFormEnabled}" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Text="Categoria:" 
                        VerticalAlignment="Center" 
                        Margin="16,5,10,5" />
                    
                    <TextBox 
                        Grid.Row="0"
                        Grid.Column="3" 
                        Text="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,5"
                        IsEnabled="{Binding IsFormEnabled}" />

                    <TextBlock 
                        Grid.Row="0"
                        Grid.Column="4"
                        Text="Preço:" 
                        VerticalAlignment="Center"
                        Margin="16,5,10,5" />
                    
                    <TextBox 
                        Grid.Row="0"
                        Grid.Column="5" 
                        Text="{Binding Price, Mode=TwoWay, StringFormat={}{0:N2}}" 
                        Margin="0,5"
                        IsEnabled="{Binding IsFormEnabled}" />

                    <TextBlock
                        Grid.Row="1" 
                        Grid.Column="0"
                        Text="Descrição:"
                        VerticalAlignment="Center"
                        Margin="0,5,10,5" />
                    
                    <TextBox 
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="4"
                        Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Height="50" 
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Margin="0,5,0,16"
                        IsEnabled="{Binding IsFormEnabled}" />

                    <CheckBox 
                        Grid.Row="1" Grid.Column="5" 
                        Content="É Combo/Promoção"
                        IsChecked="{Binding IsCombo, Mode=TwoWay}"
                        VerticalAlignment="Center"
                        Margin="16,0,0,0"
                        IsEnabled="{Binding IsFormEnabled}" />                    
                </Grid>
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                Margin="0,0,0,0"
                HorizontalAlignment="Left">

                <Button 
                    Content="Novo" 
                    Command="{Binding NewProductCommand}" 
                    Width="80" 
                    Margin="0,0,8,0" />

                <Button 
                    Content="Editar"
                    Command="{Binding EditProductCommand}"
                    Width="80"
                    Margin="0,0,8,0"
                    Background="#FF007ACC"
                    Foreground="White"
                    Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button 
                    Content="Salvar" 
                    Command="{Binding SaveProductCommand}" 
                    Width="80" 
                    Margin="0,0,8,0" 
                    Background="#FF007ACC" 
                    Foreground="White" 
                    Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Content="Cancelar" 
                    Command="{Binding CancelCommand}" 
                    Width="80" 
                    Margin="0,0,8,0" 
                    Background="#FF6C757D" 
                    Foreground="White" 
                    Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Content="Excluir" 
                    Command="{Binding DeleteProductCommand}" 
                    Width="80" 
                    Background="#FFDC3545" 
                    Foreground="White"
                    Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}"/>                
            </StackPanel>
        </StackPanel>

        <DataGrid 
            Grid.Row="1" 
            ItemsSource="{Binding Products}" 
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" 
            AutoGenerateColumns="False" 
            IsReadOnly="{Binding DataGridReadOnly}" 
            SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Id"
                    Binding="{Binding Id}" 
                    Width="60" />
                
                <DataGridTextColumn
                    Header="Nome"
                    Binding="{Binding Name}"
                    Width="*" />
                
                <DataGridTextColumn 
                    Header="Categoria" 
                    Binding="{Binding Category}" 
                    Width="150" />
                
                <DataGridTextColumn
                    Header="Preço"
                    Binding="{Binding Price, StringFormat={}{0:C}}"
                    Width="100" />
                
                <DataGridTextColumn
                    Header="Descrição"
                    Binding="{Binding Description}"
                    Width="2*" />
                
                <DataGridCheckBoxColumn 
                    Header="Combo"
                    Binding="{Binding IsCombo}" 
                    Width="80" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>