<UserControl x:Class="SmartLanche.Views.ClientRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartLanche.Views"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Cadastro de Clientes"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <Grid Margin="0,0,0,16" Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="Nome:"
                           Margin="0,4,8,4" />

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                         Margin="0,4,16,4"
                         IsEnabled="{Binding IsFormEnabled}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Telefone:"
                           Margin="0,4,8,4" />

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,4,16,4"
                         IsEnabled="{Binding IsFormEnabled}" />

                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           Text="Saldo Devedor:"
                           Margin="0,4,8,4" />

                <TextBox Grid.Row="0"
                         Grid.Column="3"
                         Text="{Binding OutstandingBalance, Mode=TwoWay, StringFormat={}{0:C}}"                         
                         Margin="0,4,8,4"                    
                         FontWeight="Black"
                         Foreground="Red"
                         HorizontalContentAlignment="Right" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Observações:"                    
                           Margin="0,4,8,4" />

                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Text="{Binding Observations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                    
                         Margin="0,4,8,4"
                         Height="80"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         IsEnabled="{Binding IsFormEnabled}" />
            </Grid>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Left">
                <Button Content="Novo" 
                        Command="{Binding NewClientCommand}" 
                        Width="80" 
                        Margin="0,0,8,0" />

                <Button Content="Editar"
                        Command="{Binding EditClientCommand}"
                        Width="80"
                        Margin="0,0,8,0"
                        Background="#FF007ACC"
                        Foreground="White"
                        Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button Content="Salvar" 
                        Command="{Binding SaveClientCommand}" 
                        Width="80" 
                        Margin="0,0,8,0" 
                        Background="#FF007ACC" 
                        Foreground="White" 
                        Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button Content="Cancelar" 
                        Command="{Binding CancelActionCommand}" 
                        Width="80" 
                        Margin="0,0,8,0" 
                        Background="#FF6C757D" 
                        Foreground="White" 
                        Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button Content="Excluir" 
                        Command="{Binding DeleteClientCommand}" 
                        Width="80" 
                        Background="#FFDC3545" 
                        Foreground="White" 
                        Visibility="{Binding IsViewing, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>

            <Border Background="#F3F3F3"
                    Padding="10"
                    CornerRadius="5"
                    Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Pesquisar Cliente:"
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5" />

                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="250"
                                 Height="28" />
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredClients}"
                  SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="{Binding DataGridReadOnly}"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Código"
                                    Binding="{Binding Id}"
                                    Width="60" />

                <DataGridTextColumn Header="Nome"
                                    Binding="{Binding Name}"
                                    Width="*" />

                <DataGridTextColumn Header="Telefone"
                                    Binding="{Binding Phone}"
                                    Width="150" />

                <DataGridTextColumn Header="Saldo Devedor"
                                    Binding="{Binding OutstandingBalance, StringFormat={}{0:C}}"
                                    ElementStyle="{StaticResource NumericDataGridColumnStyle}"
                                    Width="120" />

                <DataGridTextColumn Header="Observações"
                                    Binding="{Binding Observations}"
                                    Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
