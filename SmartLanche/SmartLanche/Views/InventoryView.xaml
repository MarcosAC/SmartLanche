<UserControl x:Class="SmartLanche.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartLanche.Views"
             xmlns:converters="clr-namespace:SmartLanche.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Style="{StaticResource DashboardCardStyle}"
                Background="#FFF3CD" 
                Visibility="{Binding IsLowStockWarningVisible, Converter={StaticResource BoolToVis}}">
            
            <TextBlock Text="Existem itens com estoque baixo!"
                       Foreground="#856404"
                       FontWeight="Bold" />
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AllProducts}"
                  SelectedItem="{Binding SelectedProduct}"
                  RowStyle="{StaticResource ProductRowInventoryStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Produto"
                                    Binding="{Binding Name}"
                                    Width="*"
                                    ElementStyle="{StaticResource TextColumnStyle}" />
                
                <DataGridTextColumn Header="Qtd Atual"
                                    Binding="{Binding StockQuantity}"
                                    Width="100"
                                    ElementStyle="{StaticResource MonetaryColumnStyle}" />
                
                <DataGridTextColumn Header="Preço Unit."
                                    Binding="{Binding Price, StringFormat=C}" 
                                    Width="120"
                                    ElementStyle="{StaticResource MonetaryColumnStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="2"
                  Header="Movimentação Manual"
                  Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Quantidade:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0" />
                
                <TextBox Width="80"
                         Text="{Binding MovementAmount}"
                         Style="{StaticResource NumericEntryStyle}" />

                <Button Content="Entrada (+)"
                        Style="{StaticResource SuccessButtonStyle}" 
                        Command="{Binding ProcessManualEntryCommand}"
                        Margin="10,0" />
                
                <Button Content="Saída (-)"
                        Style="{StaticResource DangerButtonStyle}" 
                        Command="{Binding ProcessManualExitCommand}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
