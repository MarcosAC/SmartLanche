<UserControl x:Class="SmartLanche.Views.PendingPaymentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartLanche.Views"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <GroupBox 
            Header="Clientes com Saldo Devedor"
            Margin="0,0,0,5">
            <DataGrid
                ItemsSource="{Binding DebtorClients}"
                SelectedItem="{Binding SelectedClient}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionMode="Single">
                
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Nome" 
                        Binding="{Binding Name}"
                        Width="*" />
                    
                    <DataGridTextColumn
                        Header="Saldo"
                        Binding="{Binding OutstandingBalance, StringFormat=C}"
                        Width="100" />
                </DataGrid.Columns>
            </DataGrid>            
        </GroupBox>

        <Grid 
            Grid.Column="1"
            Margin="5,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <GroupBox 
                Header="RegistrarPagamenti"
                Margin="0,0,0,10">
                
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock 
                            Text="Valor do Pagamento:"
                            FontWeight="Bold" />

                        <TextBox 
                            Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged}"
                            Width="150"
                            Height="30"
                            VerticalAlignment="Center" />

                        <Button 
                            Content="Confirmar Recebimento"
                            Command="{Binding ReceivePaymentCommand}"
                            Width="180"
                            Height="45"
                            VerticalAlignment="Bottom" />
                    </StackPanel>
                </StackPanel>                
            </GroupBox>

            <GroupBox
                Header="Histórico de Pedidos (Crédito)"
                Grid.Row="1">

                <DataGrid
                    ItemsSource="{Binding ClientOrders}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Data"
                            Binding="{Binding OrderDate, StringFormat=\{0:dd/MM/yyy H:mm\}}"
                            Width="130" />
                        <DataGridTextColumn 
                            Header="Total"
                            Binding="{Binding TotalAmount, StringFormat=C}"
                            Width="*" />

                        <DataGridTextColumn 
                            Header="Status"                            
                            Width="100">                            
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                            <Setter Property="Text" Value="PAGO" />
                                            <Setter Property="Foreground" Value="Green" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsPaid}" Value="False">
                                            <Setter Property="Text" Value="PENDENTE" />
                                            <Setter Property="Foreground" Value="Red" />
                                        </DataTrigger>
                                    </Style.Triggers>                                    
                                </Style>
                            </DataGridTextColumn.ElementStyle>                            
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>                
            </GroupBox>
        </Grid>

        <ProgressBar 
            IsIndeterminate="True"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
            VerticalAlignment="Bottom"
            Height="5"
            Grid.ColumnSpan="2" />
    </Grid>
</UserControl>
