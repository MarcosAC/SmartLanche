<UserControl x:Class="SmartLanche.Views.OrderStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:SmartLanche.Helpers"
             xmlns:models="clr-namespace:SmartLanche.Models"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.Resources>
        <helpers:StatusToColorConverter x:Key="StatusToColorConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        Margin="0,0,0,20">
                
                <TextBlock Text="Monitor de Pedidos"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#333" />
                
                <Button Content="Atualizar"
                        Command="{Binding LoadOrdersCommand}" 
                        Margin="20,0,0,0"
                        Padding="10,0"
                        Height="35"
                        Cursor="Hand" />
            </StackPanel>

            <DataGrid ItemsSource="{Binding Orders}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      CanUserAddRows="False"
                      GridLinesVisibility="Horizontal"
                      Background="White"
                      BorderThickness="0"
                      RowHeaderWidth="0"
                      MinRowHeight="40"
                      EnableRowVirtualization="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="15">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Rectangle Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Pedido #"
                                        Binding="{Binding Id}"
                                        Width="80"
                                        FontWeight="Bold" />

                    <DataGridTextColumn Header="Hora"
                                        Binding="{Binding OrderDate, StringFormat={}{0:HH:mm}}"
                                        Width="80" />

                    <DataGridTextColumn Header="Cliente"
                                        Binding="{Binding Client.Name, TargetNullValue='Balcão'}"
                                        Width="150" />

                    <DataGridTemplateColumn Header="Itens"
                                            Width="*">
                        
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding OrderItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding Quantity}" FontWeight="Bold"/>x 
                                                <Run Text="{Binding Product.Name}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Total"
                                        Binding="{Binding TotalAmount, StringFormat={}{0:C}}"
                                        Width="100" />

                    <DataGridTemplateColumn Header="Status (Clique para mudar)" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Source={helpers:EnumValuesExtension {x:Type helpers:OrderStatus}}}"
                                          SelectedValue="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="Value"
                                          DisplayMemberPath="DisplayName"
                                          SelectionChanged="StatusComboBox_SelectionChanged"
                                          Height="30"
                                          Margin="5">                                    
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>