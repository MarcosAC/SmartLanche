<UserControl x:Class="SmartLanche.Views.OrderStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:SmartLanche.Helpers"
             xmlns:models="clr-namespace:SmartLanche.Models"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.Resources>
        <helpers:StatusToColorConverter x:Key="StatusToColorConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Vertical"
                        Margin="0,0,0,20">
                
                <TextBlock Text="Monitor de Pedidos"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#333" />                

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Status:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0" />

                    <ComboBox Width="150"
                              Height="35"
                              ItemsSource="{Binding FilterStatuses}"
                              SelectedItem="{Binding SelectedFilterStatus}"
                              DisplayMemberPath="DisplayName" />
                </StackPanel>
            </StackPanel>

            <DataGrid ItemsSource="{Binding Orders}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      CanUserAddRows="False"
                      EnableRowVirtualization="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="15">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Rectangle Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Pedido #"
                                        Binding="{Binding Id}"
                                        ElementStyle="{StaticResource TextColumnStyle}"
                                        Width="80"
                                        FontWeight="Bold" />

                    <DataGridTextColumn Header="Hora"
                                        Binding="{Binding OrderDate, StringFormat={}{0:HH:mm}}"
                                        ElementStyle="{StaticResource TextColumnStyle}"
                                        Width="80" />

                    <DataGridTextColumn Header="Cliente"
                                        Binding="{Binding Client.Name, TargetNullValue='Balcão'}"
                                        ElementStyle="{StaticResource TextColumnStyle}"
                                        Width="150" />

                    <DataGridTemplateColumn Header="Itens"
                                            Width="*">
                        
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding OrderItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding Quantity}" FontWeight="Bold" />x 
                                                <Run Text="{Binding Product.Name}" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Total"
                                        Binding="{Binding TotalAmount, StringFormat={}{0:C}}"
                                        ElementStyle="{StaticResource MonetaryColumnStyle}"
                                        Width="100" />

                    <DataGridTemplateColumn Header="Status (Clique para mudar)" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Source={helpers:EnumValuesExtension {x:Type helpers:OrderStatus}}}"
                                          SelectedValue="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="Value"
                                          DisplayMemberPath="DisplayName"                                          
                                          VerticalAlignment="Center"
                                          Height="30"
                                          Margin="5">

                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="IsEnabled" Value="True" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static helpers:OrderStatus.Cancelled}">
                                                    <Setter Property="IsEnabled" Value="False" />                                                    
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static helpers:OrderStatus.Completed}">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>

                                    <ComboBox.ItemContainerStyle>                                        
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="DropDownClosed">
                                            <i:InvokeCommandAction Command="{Binding DataContext.ChangeStatusCommand, 
                                                                   RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                                   CommandParameter="{Binding}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>