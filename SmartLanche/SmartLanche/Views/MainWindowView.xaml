<Window x:Class="SmartLanche.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SmartLanche.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartLanche.Views"
        mc:Ignorable="d"
        Title="SmartLanche" Height="760" Width="1200">

    <DockPanel>
        <Border
            DockPanel.Dock="Top"
            Background="#FFF7F1E0"
            Padding="10">

            <StackPanel Orientation="Horizontal">
                <Image
                    Source="{Binding LogoPath}"
                    Height="56"
                    Width="56"
                    Margin="0,0,12,0" />

                <TextBlock
                    Text="{Binding AppName}"
                    FontSize="24"
                    VerticalAlignment="Center"
                    FontWeight="Bold" />
            </StackPanel>
        </Border>

        <TabControl Margin="8">
            <TabItem Header="Pedidos">
                
            </TabItem>

            <TabItem Header="Carrinho">

            </TabItem>

            <TabItem Header="Estoque">

            </TabItem>

            <TabItem Header="Resumo/Vendas">

            </TabItem>

            <TabItem Header="Configurações">
                <TextBlock
                    Text="Personalize em Config/appsettings.json"
                    Margin="8" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
