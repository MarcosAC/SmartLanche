<Window x:Class="SmartLanche.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SmartLanche.ViewModels"
        xmlns:views="clr-namespace:SmartLanche.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="SmartLanche" Height="760" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <DockPanel>
        <Border
            DockPanel.Dock="Top"
            Background="#FFF7F1E0"
            Padding="10">

            <StackPanel Orientation="Horizontal">
                <Image
                    Source="{Binding LogoPath}"
                    Height="56"
                    Width="56"
                    Margin="0,0,12,0" />

                <TextBlock
                    Text="{Binding AppName}"
                    FontSize="24"
                    VerticalAlignment="Center"
                    FontWeight="Bold" />
            </StackPanel>
        </Border>

        <TabControl Margin="8" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Pedidos" Tag="Sales" />
            <TabItem Header="Cardápio" Tag="Products" />
            <TabItem Header="Clientes" Tag="Clients" />
            <TabItem Header="Pendências" Tag="Payments" />
            <TabItem Header="Pedidos em Preparação" Tag="Status" />
            <TabItem Header="Estoque" Tag="Inventory" />

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding DataContext.CurrentViewModel, RelativeSource={RelativeSource AncestorType=Window}}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

